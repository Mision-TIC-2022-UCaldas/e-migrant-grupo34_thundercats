@page
@model Migrantes.App.Presentacion.Pages.Entidades.ListModel
@{
}

<h1>Listado de Entidades asociadas a su usuario</h1>
<table class="table">
@foreach (var entity in Model.Entities)
{
    <tr>
        <td>@entity.RazonSocial</td>
        <td>
            <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-pk="@entity.Id">
                Edit
            </a>
        </td>
        <td>
            <a class="btn btn-info table-btn" asp-page="./Detail" asp-route-pk="@entity.Id">
                Detail
            </a>
        </td>
    </tr>
}

</table>

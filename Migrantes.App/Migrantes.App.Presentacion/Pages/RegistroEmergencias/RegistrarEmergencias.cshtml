@page
@using Migrantes.App.Dominio
@model Migrantes.App.Presentacion.Pages.RegistroEmergencias.RegistrarEmergenciasModel
@{
}
<h1>Crea tu Emergencia</h1>

<form method="post" class="scroll">
    <div class="form-group">
        <label asp-for="Emergencias.TipoEmergencia"></label>
      <select asp-for="Emergencias.TipoEmergencia" asp-items="Html.GetEnumSelectList<TipoEmergencia>()" class="form-control" required="required" ></select> 

    </div>

    <div class="form-group">
        <label asp-for="Emergencias.Descripcion"></label>
        <input asp-for="Emergencias.Descripcion" class="form-control" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Crear</button>

</form>

<table class="table">
<tr>
    @* <th>Id</th> *@
    <th>Tipo de Emergencia</th>
    <th>Desripcion</th>
    @* <th>Type</th> *@
   
    @* <th>
        <a class="btn btn-success" asp-page="./Consultar">
            Consultar
        </a>
    </th> *@
   
</tr>
@foreach (var entity in Model.emergencias)
{
    <tr>
        <td>@entity.TipoEmergencia</td>
        <td>@entity.Descripcion</td>
    
    </tr>
}
</table>

@page
@model Migrantes.App.Presentacion.Pages.Novedades.EditModel
@{
}
<h2>Por favor ingrese la informacion:</h2>
<form method="POST">
    <input type="hidden" asp-for="Entity.Id">

    <div>
        <label asp-for="Entity.EstaActiva"></label>
        <input type="checkbox" asp-for="Entity.EstaActiva" class="form-control" >
        <span class="text-danger" asp-validation-for="Entity.EstaActiva"></span>
    </div>

    <div  class="form-group">
        <label asp-for="Entity.FechaNovedad"></label>
        <input type="date" asp-for="Entity.FechaNovedad" class="form-control" required max="2021-11-28" >
        <span class="text-danger" asp-validation-for="Entity.FechaNovedad"></span>
    </div>

    <div class="form-group">
        <label asp-for="Entity.TextoExplicativo"></label>
        <input asp-for="Entity.TextoExplicativo" class="form-control" required>
        <span class="text-danger" asp-validation-for="Entity.TextoExplicativo"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-page="./List" class="btn btn-danger">
            Cancelar
        </a>
    </div>
</form>

<br>

<a asp-page="./List" class="btn-default">Regresar</a>
